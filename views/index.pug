extends layout
include mixins/_hotel
include mixins/_country_list

block content

	.outer_wrapper
		.hotel_wrapper
			h2 Hotels 
				a(href='/all') (see all): 
			ul 
				each hotel in filteredHotels 
					li
						a(href=`/all/${hotel._id}`) #{hotel._id}
						img(src=`/images/hotels/${hotel.image}`)

		.country_wrapper
			h2 Countries 
				a(href='/countries') (see all): 
			ul 
				each country in filteredCountries
					+countryList(country._id) 



